<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_item_buku"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bahasa Indonesia"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/img_item_buku" />


        <TextView
            android:id="@+id/tvKategoriLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Kategori : "
            android:textColor="@color/blue"
            android:textSize="14sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvBuku" />

        <TextView
            android:id="@+id/tvKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sihir"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toEndOf="@+id/tvKategoriLabel"
            card_view:layout_constraintTop_toTopOf="@+id/tvKategoriLabel" />

        <TextView
            android:id="@+id/tvHalamanLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halaman : "
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvKategoriLabel" />

        <TextView
            android:id="@+id/tvHalaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="12"
            android:textColor="@color/blue"
            android:textSize="14sp"
            card_view:layout_constraintStart_toEndOf="@+id/tvKategoriLabel"
            card_view:layout_constraintTop_toTopOf="@+id/tvHalamanLabel" />

        <TextView
            android:id="@+id/tvUsernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peminjam :"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvHalamanLabel" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toEndOf="@+id/tvUsernameLabel"
            card_view:layout_constraintTop_toTopOf="@+id/tvUsernameLabel" />

        <TextView
            android:id="@+id/tvDurasiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durasi :"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvUsernameLabel" />

        <TextView
            android:id="@+id/tvDurasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginStart="8dp"
            android:textColor="@color/blue"
            android:textSize="14sp"
            card_view:layout_constraintStart_toEndOf="@+id/tvDurasiLabel"
            card_view:layout_constraintTop_toTopOf="@+id/tvDurasiLabel" />

        <TextView
            android:id="@+id/tvDurasiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="Hari"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toEndOf="@+id/tvDurasi"
            card_view:layout_constraintTop_toTopOf="@+id/tvDurasiLabel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>